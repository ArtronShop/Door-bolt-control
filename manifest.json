{
  "name": "Door bolt control",
  "version": "1.0",
  "permissions": [
    "activeTab",
	"tabs",
	"<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Lock or Unlock your door",
	"default_popup": "popup.html"
  },
  "icons": { 
    "16": "img/lock-icon.png",
    "48": "img/lock-icon.png",
    "128": "img/lock-icon.png" 
  },
  "manifest_version": 2
}